    <ImageView
        android:id="@+id/btnCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"
        android:focusable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/chAzyberk"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_margin="30dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Ayzberk"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chChinsey"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Chinsey"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@id/chAzyberk"
        app:layout_constraintTop_toBottomOf="@id/chAzyberk" />

    <TextView
        android:id="@+id/chLolarosa"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Lolarosa"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/chAzyberk"
        app:layout_constraintTop_toBottomOf="@+id/chChinsey" />

    <TextView
        android:id="@+id/chMyata"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Myata"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/chAzyberk"
        app:layout_constraintTop_toBottomOf="@+id/chLolarosa" />

    <TextView
        android:id="@+id/chRukola"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_margin="30dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Rukola"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chUkrop"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Ukrop"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@id/chRukola"
        app:layout_constraintTop_toBottomOf="@id/chRukola" />

    <TextView
        android:id="@+id/chBrokli"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Brokli"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@id/chRukola"
        app:layout_constraintTop_toBottomOf="@id/chUkrop" />

    <TextView
        android:id="@+id/chBalgar"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Balgar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@id/chRukola"
        app:layout_constraintTop_toBottomOf="@id/chBrokli" />

    <TextView
        android:id="@+id/chRediska"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Rediska"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/chBaqlajon"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Baqlajon"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chRediska" />

    <TextView
        android:id="@+id/chDaykon"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:clickable="true"
        android:focusable="true"
        android:text="Daykon"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chBaqlajon" />

    <EditText
        android:id="@+id/chBoshqa"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_names"
        android:hint="boshqa..."
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chDaykon"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chBalgar">


        <EditText
            android:id="@+id/editSotganMiqdor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_line"
            android:hint="Miqdor"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editSotganNarx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_line"
            android:hint="Narx"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

